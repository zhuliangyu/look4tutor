<!DOCTYPE html>
<html>
<head>
  <title>Look4tutor</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>



  <script src="//maps.google.com/maps/api/js?key=AIzaSyAmlikxlGlCYIwCoWfaxPBrRMfQcPbPvSg"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->


</head>
<body>

<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Look4Tutor</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Home", root_path %></li>

        <li><%= link_to "tutor List", tutors_path %></li>
        <li><%= link_to "New tutor", new_tutor_path %></li>
        <li><%= link_to "Admin", admin_root_path %></li>
        <li><%= link_to "Conversation", conversations_path %></li>

        <% if user_sign_in? %>
            <li>Hi,<%= User.find(session[:user_id]).first_name %></li>
        <% end %>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Sign up", new_user_path %></li>
            <li><%= link_to "Sign in", new_sessions_path %></li>
            <li><%= link_to "Sign out", sessions_path, method: :delete %></li>
            <li class="divider"></li>
            <li class="dropdown-header">Nav header</li>
            <li><a href="#">Separated link</a></li>
            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>
<!-- Fixed navbar -->


<div class="container">
  <div>
    <%= flash[:notice] ? flash[:notice] : "" %>
  </div>
  <div>
    <%= flash[:alert] ? flash[:alert] : "" %>
  </div>
</div>



<%= yield %>

</body>
</html>
